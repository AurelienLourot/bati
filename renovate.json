{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "bump",
  "assignees": ["@magne4000"],
  "packageRules": [
    {
      "matchPackageNames": ["@types/node", "node", "pnpm"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "all (non-major)",
      "automerge": true,
      "automergeSchedule": ["on monday"],
      "automergeType": "pr"
    },
    {
      "matchUpdateTypes": ["major"],
      "minimumReleaseAge": "3 days"
    }
  ]
}
