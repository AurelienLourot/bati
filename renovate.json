{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "bump",
  "assignees": ["@magne4000"],
  "prCreation": "not-pending",
  "packageRules": [
    {
      "matchPackageNames": ["@types/node", "node"],
      "rangeStrategy: "in-range-only",
      "groupName": "node"
    },
    {
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "all (non-major)"
    }
  ]
}
